public class Calculator{
  // Constructor
    public Calculator () {}
 
 // method of adding
  public int add (int a, int b) {
 	return a+b;
 	}
  
  //method of substract
  public int substract (int a, int b){
  	return a-b;
  }
  
  
  // method of multiply
  public int multiply (int a, int b ) {
    return a*b;
  }
  
  // method of divide
  public int divide (int a, int b ){
    if (b !=0 )
    {
      return a/b;
    }
    else {
    System.out.println("Error! Dividing by zero is not allowed.");
    return 0;
    }
  }
  
  
  //method of module
  public int  module(int a, int b){
    if (b==0){
      System.out.println("Error! Dividing by zero is not allowed.");
      return 0;
    }
    else{
      return a%b;
    }
  }
  
  public static void main(String[] args) {

  Calculator myCalculator = new Calculator();
  System.out.println(myCalculator.add(5,7)); 
  System.out.println(myCalculator.subtract(45,11));
  System.out.println(myCalculator.multiply(6,9));
  System.out.println(myCalculator.divide(15,0));
  System.out.println(myCalculator.divide(15,3));
  System.out.println(myCalculator.module(15,6));
  }  
  
}
